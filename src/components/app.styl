@import '../../node_modules/vuetify/src/stylus/settings/_colors'

$theme = {
	primary: #83C22E,
	accent: #EEF8CC,
	secondary: $grey.darken-3,
	info: $blue.base,
	warning: $amber.base,
	error: $red.base,
	success: $green.base
}

@import url("//fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic");
@import url("//fonts.googleapis.com/icon?family=Material+Icons");

@import '../../node_modules/vuetify/src/stylus/main';

$alignments = {
	s: flex-start
	e: flex-end
	c: center
	sb: space-between
	sa: space-around
	st: stretch
}

// Justify and Align (Content,Items,Self)
for key, val in $alignments
	.js--{key}
		justify-self val
	.ji--{key}
		justify-items val
	.jc--{key}
		justify-content val
	.as--{key}
		align-self val
	.ai--{key}
		align-items val
	.ac--{key}
		align-content val